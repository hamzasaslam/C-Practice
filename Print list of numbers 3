#include <iostream>
using namespace std;
int main()
{
    cout << "enter the number of terms please:\n";

    int n, N;
    cin >> n;
    cout << "First " << n << " even numbers:\n";
    for (int i = 1; i < N; i++)
    {
        N = n + n;
        if (i % 2 == 0)
        {
            cout << i << endl;
        }
    }
    return 0;
}
